<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <EditText android:layout_width="match_parent"
              android:id="@+id/etxt"
              android:hint="enter number"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:layout_width="70dp"
                android:id="@+id/btn1"
                 android:text="1"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="70dp"
                android:id="@+id/btn2"
                android:text="2"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="70dp"
                android:id="@+id/btn3"
                android:text="3"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="70dp"
                android:id="@+id/btn4"
                android:text="4"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:layout_width="70dp"
                android:id="@+id/btn5"
                android:text="5"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="70dp"
                android:id="@+id/btn6"
                android:text="6"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="70dp"
                android:id="@+id/btn7"
                android:text="7"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="70dp"
                android:id="@+id/btn8"
                android:text="8"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:layout_width="70dp"
                android:id="@+id/btn9"
                android:text="9"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="70dp"
                android:id="@+id/btn0"
                android:text="0"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="70dp"
                android:id="@+id/btndat"
                android:text="."
                android:layout_height="wrap_content"/>
        <Button android:layout_width="70dp"
                android:id="@+id/btnp"
                android:text="+"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:layout_width="70dp"
                    android:id="@+id/btnmi"
                    android:text="-"
                    android:layout_marginLeft="50dp"
                    android:layout_height="wrap_content"/>
            <Button android:layout_width="70dp"
                    android:id="@+id/btnmu"
                    android:text="*"
                    android:layout_height="wrap_content"/>
            <Button android:layout_width="70dp"
                    android:id="@+id/btndi"
                    android:text="/"
                    android:layout_height="wrap_content"/>
            <Button android:layout_width="70dp"
                    android:id="@+id/btnmo"
                    android:text="="
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:layout_width="140dp"
                android:id="@+id/btncl"
                android:text="c"
                android:layout_marginLeft="120dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    </LinearLayout>


